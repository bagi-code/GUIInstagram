<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bagicode.www.guiinstagram.MainActivity">

    <ImageView
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_photoProfil"
        android:id="@+id/photoProfil"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/photoProfil"
        android:id="@+id/nameProfil"
        android:textStyle="bold"
        android:text="Robby Dianputra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/nameProfil"
        android:layout_toRightOf="@id/photoProfil"
        android:id="@+id/idProfil"
        android:textStyle="bold"
        android:text="Id Dianputra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--thumbnail-->
    <ImageView
        android:scaleType="centerCrop"
        android:src="@mipmap/thumbnail"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/photoProfil"
        android:layout_width="match_parent"
        android:layout_height="350dp" />

    <!--footer-->
    <ImageView
        android:id="@+id/photoView"
        android:src="@drawable/ic_mood"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <TextView
        android:layout_toRightOf="@id/photoView"
        android:layout_alignParentBottom="true"
        android:text="1000 View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginRight="10dp"
        android:id="@+id/photoUp"
        android:background="#000"
        android:layout_toLeftOf="@id/nameUp"
        android:layout_alignParentBottom="true"
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/nameUp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="1000 Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/photoLove"
        android:src="@drawable/ic_star"
        android:layout_toLeftOf="@id/nameLove"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/nameLove"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="1000 Love"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
